extends layout

block content
  h1 #{title}
  form(method='POST', action='/devices/edit/'+device._id)
    #form-group
      label Name:
      input.form-control(name='name', type='text', value=device.name)
    #form-group
      label Description:
      input.form-control(name='description', type='text', value=device.description)
    br
    input.btn.btn-primary(type='submit',value='Submit')
